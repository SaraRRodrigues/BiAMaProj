    <style>
        .ui-autocomplete {
            max-height: 100px;
            overflow-y: auto;
            /* prevent horizontal scrollbar */
            overflow-x: hidden;
            /* add padding to account for vertical scrollbar */
            padding-right: 20px;
        }
        /* IE 6 doesn't support max-height
        * we use height instead, but this forces the menu to always be this tall
        */
        * html .ui-autocomplete {
            height: 100px;
        }
    </style>
    <body  ng-app="myApp" ng-controller="CompareController">
        <!--image biama -->
        <div class="row text-center">
            <img class="margin-top-3x" src="../images/topoBiama.png"/>
        </div>
        <div class="imageRight">
            <img src="../images/rightBiama.png"/>
        </div>
        <!-- content of compare page -->
        <div class="titlesOnCenter">
            <div class="imageLeft">
                <img class="margin-top-3x" src="../images/leftBiama.png"/>
            </div>
            <i class="cursorPointer float-left fa fa-chevron-left arrows margin-right-2x backArrow" ng-click="goToHomePage()"></i>
            <div class="padding-left-4x">
                <h1 class="subtitles">Comparar Materiais</h1>
            </div>
            <div ng-if="loading">
				<div class="loading-icon-footer-info"></div>
			</div>
            <div ng-if="showMaterialsCompare" class="sectionScrollTotalCompare">
                <div ng-repeat="material in materialToCompare track by $index" class="titlesOnCenter sectionScrollCompare">     
                    <figure>
                        <img class="margin-bottom-2x cursorPointer margin-left-2x cursorPointer" ng-src="../images/categories/[{material.category}]/[{material.image}]" width="35%" height="150px" alt="foto"/>
                        <figcaption>[{material.text}]</figcaption>
                    </figure>
                </div>
            </div>
            <br>
            <div class="ui-widget">
                <input id="tags" style="width: 195px;">
                <button ng-click="selectedMaterial()">OK</button>
            </div>
            <div ng-if="doLogin">
                <h4>Efetue login para obter comparações entre materiais.</h4>
            </div>
        </div>
    </body>
