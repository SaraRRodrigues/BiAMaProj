<!DOCTYPE html>
<html ng-app="myApp">
    <body>
        <div ng-controller="PerfilController">
            <!--image biama -->
            <div class="row text-center">
                <img class="margin-top-3x" src="../images/topoBiama.png"/>
            </div>
            <div class="imageRight">
                <img src="../images/rightBiama.png"/>
            </div>
            <div style="text-align:center;"> 
                <div class="imageLeft">
                    <img class="margin-top-3x" src="../images/leftBiama.png"/>
                </div>
			    <h1 style="font-weight: normal;color: #5F9EA0;font:bold">O meu perfil</h1>
		    </div>

            <div>
                
                <br>
                <div class="perfilDetails">
                
                    <i class="fas fa-user"></i>
                  
                    <h4 class="minTitleBiAMa">Nome de Utilizador</h4><br>

                    <input class="inputsCenter" type="text" placeholder="Username" style="border:none; background: transparent; outline: 0;"/><br>
