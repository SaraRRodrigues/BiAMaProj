                    <div class="lineWhite margin-bottom margin-top margin-right-50px margin-left-50px"></div>

                    <input class="inputsCenter" type="text" placeholder="Password" style="border:none; background: transparent; outline: 0;"/><br>
                    <div class="lineWhite margin-bottom margin-top margin-right-50px margin-left-50px"></div>

                    <button class="inputsCenter buttonBorder margin-top margin-bottom" ng-click="clickUserDetails()">Alterar dados</button>	
