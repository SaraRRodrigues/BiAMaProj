<html>
	<head>
		<link rel='stylesheet' href='/stylesheets/styleBiama.css' />
		<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

		<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
		
        <!-- ajax dropup-->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

		<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.9/angular.min.js"></script>
		<script type="text/javascript" src="https://code.angularjs.org/1.6.9/angular-route.js"></script>
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

		<!-- jQuery files -->
		<script src="https://code.jquery.com/jquery-1.9.1.min.js"></script>
		<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
		<link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">

		<!-- Firebase -->
		<script src="https://www.gstatic.com/firebasejs/3.6.4/firebase.js"></script>
		<!-- AngularFire -->
		<script src="https://cdn.firebase.com/libs/angularfire/2.2.0/angularfire.min.js"></script>

		<!--footer controllers-->
		<script type="text/javascript" src="../controllers/main-controller.js"></script>
		<script type="text/javascript" src="../controllers/biama-controller.js"></script>
		<script type="text/javascript" src="../controllers/whereWeAre-controller.js"></script>
		<script type="text/javascript" src="../controllers/forum-controller.js"></script>
		<script type="text/javascript" src="../controllers/curiosityForum-controller.js"></script>
        <script type="text/javascript" src="../controllers/questionsUsersForum-controller.js"></script>
        <script type="text/javascript" src="../controllers/worldShareForum-controller.js"></script>
		<script type="text/javascript" src="../controllers/library-controller.js"></script>
		<script type="text/javascript" src="../controllers/myBiama-controller.js"></script>

		<!--details user controllers-->
		<script type="text/javascript" src="../controllers/perfil-controller.js"></script>
		<script type="text/javascript" src="../controllers/favorites-controller.js"></script>
		<script type="text/javascript" src="../controllers/notifications-controller.js"></script>
		<script type="text/javascript" src="../controllers/questions-controller.js"></script>
		<script type="text/javascript" src="../controllers/worldShares-controller.js"></script>
		<script type="text/javascript" src="../controllers/compare-controller.js"></script>
		<script type="text/javascript" src="../controllers/login-controller.js"></script>
		<script type="text/javascript" src="../controllers/resultsMaterials-controller.js"></script>
		 
		<base href="/"/>
	</head>
	<body ng-app="myApp" ng-controller="LibraryController">
        
        <!-- header -->
        <div class="container-fluid">
            <div class="header margin-top-3x">
                <div class="margin-left-4x  col-sm-4">
                    <img ng-if="!userDetails" src="../images/user.png" alt="img" ng-click="clickUserDetails()">
                </div>
                <div ng-if="!showSearch" class="col-sm-6">
                    <h2 ng-if="!locationMaterial" class="subtitles">Biblioteca</h2>
                    <h2 ng-if="locationMaterial" class="subtitles">Onde estamos ?</h2>
                </div>
                <div ng-if="!showSearch" class="margin-top-2x col-sm-1">
                    <img class="float-right" ng-if="!showSearch && !userDetails" ng-click="clickTopSearch()" src="../images/search.png">
                    <img class="float-right" ng-if="showSearch  && !userDetails" ng-click="clickTopSearch()" src="../images/search.png">
                </div>
                <div ng-if="showSearch" class="margin-top col-sm-2">
                    <img class="float-right" ng-if="!showSearch && !userDetails" ng-click="clickTopSearch()" src="../images/search.png">
                    <img class="float-right" ng-if="showSearch  && !userDetails" ng-click="clickTopSearch()" src="../images/search.png">
                </div>
                <div class="col-sm-1">
                    <input class="inputMinSearch" ng-if="showSearch && !userDetails" type="text" style=" width: 340px; margin-top: 17px;"></input>
                </div>
            </div>
        </div> 
        <!-- spinner loading page -->
        <div ng-if="loading">
			<div class="loading-icon-footer-info"></div>
		</div>
        <!-- show categories and materials -->
        <div class="container">
            <div class="row" ng-if="!loading && !showCategory && !showMaterialDetails">
                <div class="scrollMobile">
                    <div class="col-md-4 thumbnail" ng-repeat="category in categories">
                        <div class="titlesOnCenter">
                            <div>
                                <h1>[{image.category}]</h1>
                                <img class="margin-bottom-2x cursorPointer" ng-src="../images/categories/library/[{category.name}]" ng-click="openCategory(category.category)" width="75%" height="230px" alt="foto"/>
                                <div class="top-bottom">[{category.category}]</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div ng-if="showCategory && !showMaterialDetails">
                 <div class="scrollMobile">
                    <div class="col-sm-6" ng-repeat="image in materialOfCategory track by $index">
                        <div class="titlesOnCenter">
                            <div>
                                <h1>[{image.category}]</h1>
                                <img class="margin-bottom-2x cursorPointer" ng-src="../images/categories/[{category}]/[{materialOfCategory[$index].name}]" ng-click="openDetailsMaterial(materialOfCategory[$index])" ng-click="openDetailsMaterial(materialOfCategory[$index])" width="75%" height="200px" alt="foto"/>
                                <div class="top-bottom-material">Material [{image.code}]</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- show material details -->
        <div ng-if="!loading" class="margin-left-2x col-sm-11">
			<div ng-if="showMaterialDetails && !locationMaterial && !zoomInMaterial" class="titlesOnCenter sectionScroll">
				<img class="margin-bottom-2x" ng-src="../images/categories/[{materialInfo.category}]/[{materialInfo.image}]" width="15%" height="130px" alt="foto"/><br>
				<div class="titlesOnCenter">
					<!-- Favorite -->
					<i ng-click="clickFavorite(materialInfo)" ng-if="materialInfo.isFavorite" class="fas fa-star cursorPointer iconMedium"></i>
					<i ng-click="clickFavorite(materialInfo)" ng-if="!materialInfo.isFavorite" class="far fa-star cursorPointer iconMedium"></i>
					<!-- Location -->
					<i ng-click="clickLocation(materialInfo)" class="fas fa-map-marker-alt cursorPointer iconMedium"></i>
					<!-- Zoom in -->
					<i ng-click="clickZoomIn(materialInfo)" class="fas fa-search-plus cursorPointer iconMedium"></i>
				</div>
				<p>[{materialInfo.description}]
				</p>
				<div ng-if="clickAddFavoriteMaterial">
					<h4>Para poder adicionar ou remover dos seus favoritos, tem de iniciar sessão</h4>
				</div>
				<div ng-if="favoriteAlreadyExists">
					<h4>Favorito adicionado</h4>
				</div>
			</div>
		</div>
        <!-- zoom in material -->
        <div ng-if="zoomInMaterial">
			<div>
				<i ng-click="closeMaterial()" class="fas fa-times float-right cursorPointer iconMedium"></i>
				<img class="margin-bottom-2x margin-left-2x borderZoomMaterial" ng-src="../images/categories/[{materialInfo.category}]/[{materialInfo.image}]" width="47%" height="460px" alt="foto"/><br>
			</div>
		</div>
        <!-- show location of material -->
		<div ng-if="locationMaterial">
			<div ng-if="loading">
				<div class="loading-icon-footer-info"></div>
			</div>	
			<div ng-if="!loading" class="titlesOnCenter">
				<iframe ng-if="!zoomInIFrame" ng-src="[{locationsURL}]" height="90%" width="100%" frameborder="0" style="border:0" allowfullscreen></iframe>
				<iframe ng-if="zoomInIFrame" ng-src="[{locationsURL}]" height="90%" width="100%" frameborder="0" style="border:0" allowfullscreen></iframe>
				
                <div class="dropup ">
                    <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown" ng-click="getSchools()">Pesquise um local ou endereço
                    <span class="caret"></span></button>
                    <ul class="dropdown-menu">
                        <div ng-if="showSchools" ng-repeat="biama in schools">
                            <li>
                            <a class="languagesDiv margin-right-4x" ng-click="selectSchool(biama.locationDescription)">[{biama.locationDescription}]</a>
                            </li>
                        </div>
                    </ul>
                        <ul class="dropdown-menu">
                        <div class="loadSchool" ng-if="loadingSchool">
                            <li class="loading-icon-footer-info"></li>
                        </div>
                    </ul>
                </div>
			</div>
		</div>
        <!-- footer -->

        <div class="container">
            <div>
                <a href="/BiAMa/libraryMobile">
                    <img ng-if="nameclick !== 'libraryMobile'" ng-click="changeColorClick('libraryMobile')" style="color: #E4A73F; text-decoration:none; " class="buttonNotSelected" src="../images/mobile/library.png"/>
                    <img ng-if="nameclick === 'libraryMobile'" ng-click="changeColorClick('libraryMobile')" style="color: white; text-decoration:none; " class="buttonSelected " src="../images/mobile/library.png"/>
                </a>
                <a href="/BiAMa/whereWeAreMobile">
                    <img ng-if="nameclick !== 'whereWeAre'" ng-click="changeColorClick('whereWeAre')" style="color: #E4A73F; text-decoration:none; " class="buttonNotSelected " src="../images/mobile/location.png"/>
                    <img ng-if="nameclick === 'whereWeAre'" ng-click="changeColorClick('whereWeAre')" style="color: white; text-decoration:none; " class="buttonSelected " src="../images/mobile/location.png"/>
                </a>
                <a href="/BiAMa/library">
                    <img ng-if="nameclick !== 'library'" ng-click="changeColorClick('library')" style="color: #E4A73F; text-decoration:none; " class="buttonNotSelected " src="../images/mobile/photo.png"/>
                    <img ng-if="nameclick === 'library'" ng-click="changeColorClick('library')" style="color: white; text-decoration:none; " class="buttonSelected " src="../images/mobile/photo.png"/>
                </a>
                <a href="/BiAMa/library">
                    <img ng-if="nameclick !== 'biamaPage'" ng-click="changeColorClick('biamaPage')" style="color: #E4A73F; text-decoration:none; " class="buttonNotSelected " src="../images/mobile/biamaPage.png"/>
                    <img ng-if="nameclick === 'biamaPage'" ng-click="changeColorClick('biamaPage')" style="color: white; text-decoration:none;" class="buttonSelected " src="../images/mobile/biamaPage.png"/>
                </a>
                <a href="/BiAMa/forum">
                    <img ng-if="nameclick !== 'forum'" ng-click="changeColorClick('forum')" style="color: #E4A73F; text-decoration:none; " class="buttonNotSelected " src="../images/mobile/questions.png"/>
                    <img ng-if="nameclick === 'forum'" ng-click="changeColorClick('forum')" style="color: white; text-decoration:none; " class="buttonSelected " src="../images/mobile/questions.png"/>
                </a>
            </div>
        </div>
	</body>
</html>



