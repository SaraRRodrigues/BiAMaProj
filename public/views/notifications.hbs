		<script type="text/javascript" src="../controllers/resultsMaterials-controller.js"></script>
		 
		<base href="/"/>
	</head>
    <body ng-app="myApp" ng-controller="NotificationsController">
         <!--image biama -->
        <div class="row text-center">
            <img class="margin-top-3x" src="../images/topoBiama.png"/>
        </div>
        <i ng-if="namePage!=='notifications'" class="fas fa-caret-left littleButtonNotifications"></i>
        <div class="imageRight">
            <img src="../images/rightBiama.png"/>
        </div>
		<!-- title, content of notification page and image left -->
        <div style="titlesOnCenter">
            <div class="imageLeft">
                <img class="margin-top-3x" src="../images/leftBiama.png"/>
            </div>
			<i class="cursorPointer float-left fa fa-chevron-left arrows margin-right-2x backArrow" ng-click="goToHomePage()"></i>
            <div class="padding-left-4x">
                <h2 class="subtitles margin-top-4x">[{currentNotification}]</h2> 
            </div>
            <!-- show notifications -->
            <div ng-if="notificationNumber" class="divNotifications sectionScrollNotification">
                <div ng-if="loading">
                    <div class="loading-icon-footer-info"></div>
                </div>
                <div ng-repeat="notification in notifications">
                    <div ng-if="notification.insert">
                       <h6 ng-click="openNotification(notification.text_notification)">[{notification.text_notification}]</h6>
                       <h6 class="dateNotification">[{notification.date_notification}]</h6>
                    </div>
                   <div class="lineWhite margin-bottom margin-top"></div>									
                </div>
            </div>
        </div>
    </body>
</html>



