<html>
    <body ng-app="myApp" ng-controller="MyQuestionsController">
         <!--image biama -->
        <div class="row text-center">
            <img class="margin-top-3x" src="../images/topoBiama.png"/>
        </div>
        <div class="imageRight">
            <img src="../images/rightBiama.png"/>
        </div>
        <div class="titlesOnCenter">
            <div class="imageLeft">
                <img class="margin-top-3x" src="../images/leftBiama.png"/>
            </div>
            <div class="padding-left-4x">
                <h1 ng-if="!showMyQuestions" class="subtitles">As minhas perguntas</h1> 
               
            </div>
            <div ng-if="loading">
				<div class="loading-icon-footer-info"></div>
			</div>
            <div ng-if="!showMyQuestions" class="titlesOnCenter" ng-repeat="question in myQuestionDetails track by $index">
                <a class="questionX" ng-click="getQuestion(question.id_question, $index)">Pergunta [{$index+1}]</a><br>
                <div class="separateQuestions"></div>
            </div>
            <div ng-if="showMyQuestions">
                <div class="titlesOnCenter"> 
                    <h1 class="subtitles">Pergunta [{indexQuestion}]</h1>
                </div>
                <div class="titlesOnCenter">
                    <div ng-if="!showDivAnswer" class="margin-left-10x">
                        <!-- Question -->
                        <img class="imageButton" src="../images/user.png">
                        <div class="borderQuestion">
                            <label class="margin-right-6x">Pergunta [{indexQuestion}]</label>
                            <div ng-if="!clickAddFavorite" ng-click="addToFavoritesQuestion()">
                                <i class="far fa-star favoriteButton cursorPointer"></i>
                            </div>
                            <div ng-if="clickAddFavorite" ng-click="removeFromFavoritesQuestion()">
                                <i class="fas fa-star favoriteButton cursorPointer"></i>
                            </div>
                            <div ng-if="likeQuestion>0" ng-click="addLikeQuestion()">
                                <i class="fas fa-thumbs-up likeButton cursorPointer"></i>
                            </div>
                            <div ng-if="likeQuestion==0" ng-click="removeLikeQuestion()">
                                <i class="far fa-thumbs-up likeButton cursorPointer" ></i>
                            </div>
                            <h5 class="descriptionQuestion">[{descriptionQuestion}]</h5>
                        </div>
                        <!-- Answers -->
                        <div ng-repeat="answerQuestion in descriptionAnswer track by $index" ng-if="descriptionAnswer.length>0">
                            <img ng-if="$index%2!==0" class="imageButton" src="../images/user.png">
                            <div ng-if="$index%2!==0" class="borderQuestion">
                                <label class="margin-right-6x">Resposta [{answerQuestion.numberOfQuestion}]</label>
                                <div ng-if="favoriteAnswer" ng-click="removeFromFavoritesQuestion()">
                                    <i class="fas fa-star favoriteButton cursorPointer"></i>
                                </div>
                                <div ng-if="!favoriteAnswer" ng-click="addToFavoritesQuestion()">
                                    <i class="far fa-star favoriteButton cursorPointer"></i>
                                </div>
                                <div ng-if="answerQuestion.likes!==0" ng-click="addLikeQuestion()">
                                    <i class="fas fa-thumbs-up likeButton cursorPointer"></i>
                                </div>
                                <div ng-if="answerQuestion.likes===0" ng-click="removeLikeQuestion()">
                                    <i class="far fa-thumbs-up likeButton cursorPointer"></i>
                                </div>
                                <h5 class="descriptionQuestion">[{answerQuestion.text}]</h5>
                            </div>
                            <div ng-if="$index%2===0"  class="borderAnswer">
                                <div ng-if="favoriteAnswer" ng-click="removeFromFavoritesQuestion()">
                                    <i class="fas fa-star favoriteButtonLeft cursorPointer"></i>
                                </div>
                                <div ng-if="!favoriteAnswer" ng-click="addToFavoritesQuestion()">
                                    <i class="far fa-star favoriteButtonLeft cursorPointer"></i>
                                </div>
                                <div ng-if="answerQuestion.likes!==0" ng-click="addLikeQuestion()">
                                    <i class="fas fa-thumbs-up likeButtonLeft cursorPointer"></i>
                                </div>
                                <div ng-if="answerQuestion.likes===0" ng-click="removeLikeQuestion()">
                                    <i class="far fa-thumbs-up likeButtonLeft cursorPointer"></i>
                                </div>
                                <label class="margin-left-7x">Resposta [{answerQuestion.numberOfQuestion}]</label>
                                <img class="imageButtonLeft" src="../images/user.png">
                                <h5 class="descriptionAnswer">[{answerQuestion.text}]</h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <footer ng-if="!isMobileView" class="w3-bar w3-center footer">
			<a href="/BiAMa/biamaPage" ng-if="nameclick !== 'biamaPage'" ng-click="changeColorClick('biamaPage')" style="width:20%;color: #E4A73F; text-decoration:none" class="buttonNotSelected buttonAlignment w3-mobile">BiAMa</a>
			<a href="/BiAMa/biamaPage" ng-if="nameclick === 'biamaPage'" ng-click="changeColorClick('biamaPage')" style="width:20%;color: white; text-decoration:none" class="buttonSelected buttonAlignment w3-mobile">BiAMa</a>

			<a href="/BiAMa/whereWeAre" ng-if="nameclick !== 'whereWeAre'" ng-click="changeColorClick('whereWeAre')" style="width:20%;color: #E4A73F; text-decoration:none" class="w3-bar-item buttonNotSelected w3-mobile">Onde Estamos</a>
			<a href="/BiAMa/whereWeAre" ng-if="nameclick === 'whereWeAre'" ng-click="changeColorClick('whereWeAre')" style="width:20%;color: white; text-decoration:none" class="w3-bar-item buttonSelected w3-mobile">Onde Estamos</a>

			<a href="/BiAMa/library" ng-if="nameclick !== 'library'" ng-click="changeColorClick('library')" style="width:20%;color: #E4A73F; text-decoration:none" class="w3-bar-item buttonNotSelected w3-mobile">Biblioteca</a>
			<a href="/BiAMa/library" ng-if="nameclick === 'library'" ng-click="changeColorClick('library')" style="width:20%;color: white; text-decoration:none" class="w3-bar-item buttonSelected w3-mobile">Biblioteca</a>

			<a href="/BiAMa/myBiama" ng-if="nameclick !== 'myBiama'" ng-click="changeColorClick('myBiama')" style="width:20%;color: #E4A73F; text-decoration:none" class="w3-bar-item buttonNotSelected w3-mobile">A sua BiAMa</a>
			<a href="/BiAMa/myBiama" ng-if="nameclick === 'myBiama'" ng-click="changeColorClick('myBiama')" style="width:20%;color: white; text-decoration:none" class="w3-bar-item buttonSelected w3-mobile">A sua BiAMa</a>

			<a href="/BiAMa/forum" ng-if="nameclick !== 'forum'" ng-click="changeColorClick('forum')" style="width:20%; color:#E4A73F; text-decoration:none" class="w3-bar-item buttonNotSelected w3-mobile">Fórum</a>
			<a href="/BiAMa/forum" ng-if="nameclick === 'forum'" ng-click="changeColorClick('forum')" style="width:20%; color:white; text-decoration:none" class="w3-bar-item buttonSelected w3-mobile">Fórum</a>
		</footer>
        <footer ng-if="isMobileView">
			<a href="/BiAMa/biamaPage">
				<img ng-if="nameclick !== 'biamaPage'" ng-click="changeColorClick('biamaPage')" style="color: #E4A73F; text-decoration:none" class="buttonNotSelected buttonAlignment" src="../images/mobile/library.png"/>
				<img ng-if="nameclick === 'biamaPage'" ng-click="changeColorClick('biamaPage')" style="color: white; text-decoration:none" class="buttonSelected buttonAlignment" src="../images/mobile/library.png"/>
			</a>
			<a href="/BiAMa/whereWeAre">
				<img ng-if="nameclick !== 'whereWeAre'" ng-click="changeColorClick('whereWeAre')" style="color: #E4A73F; text-decoration:none" class="buttonNotSelected buttonAlignment" src="../images/mobile/location.png"/>
				<img ng-if="nameclick === 'whereWeAre'" ng-click="changeColorClick('whereWeAre')" style="color: white; text-decoration:none" class="buttonSelected buttonAlignment" src="../images/mobile/location.png"/>
			</a>
			<a href="/BiAMa/library">
				<img ng-if="nameclick !== 'library'" ng-click="changeColorClick('library')" style="color: #E4A73F; text-decoration:none" class="buttonNotSelected buttonAlignment" src="../images/mobile/photo.png"/>
				<img ng-if="nameclick === 'library'" ng-click="changeColorClick('library')" style="color: white; text-decoration:none" class="buttonSelected buttonAlignment" src="../images/mobile/photo.png"/>
			</a>
			<a href="/BiAMa/biamaPage">
				<img ng-if="nameclick !== 'biamaPage'" ng-click="changeColorClick('biamaPage')" style="color: #E4A73F; text-decoration:none" class="buttonNotSelected buttonAlignment" src="../images/mobile/biamaPage.png"/>
				<img ng-if="nameclick === 'biamaPage'" ng-click="changeColorClick('biamaPage')" style="color: white; text-decoration:none" class="buttonSelected buttonAlignment" src="../images/mobile/biamaPage.png"/>
			</a>
			<a href="/BiAMa/forum">
				<img ng-if="nameclick !== 'forum'" ng-click="changeColorClick('forum')" style="color: #E4A73F; text-decoration:none" class="buttonNotSelected buttonAlignment" src="../images/mobile/questions.png"/>
				<img ng-if="nameclick === 'forum'" ng-click="changeColorClick('forum')" style="color: white; text-decoration:none" class="buttonSelected buttonAlignment" src="../images/mobile/questions.png"/>
			</a>
		</footer>
    </body>
</html>



